<Window x:Class="HideAndLock.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HideAndLock"
        mc:Ignorable="d"
        Title="ChangePasswordWindow" Height="150" Width="400"
        Loaded="ChangePasswordWindow_Loaded"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="10,10,0,0">
            <TextBlock Text="Enter new password" HorizontalAlignment="Left" />
            <StackPanel Orientation="Horizontal">
                <PasswordBox Name="PasswordBox" Height="30" Width="300"
                         Margin="0,0,10,0" KeyDown="PasswordBox_KeyDown"/>

                <Button Width="50" Height="30"
                        Content="OK" Click="OKButton_Click"></Button>
            </StackPanel>
           
        </StackPanel>

    </Grid>
</Window>
